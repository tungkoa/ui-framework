{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",

    "target": "ES2015",
    "module": "commonjs",

    "jsx": "react",
    "jsxFactory": "h",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_module"]
}
